{
  "compilerOptions": {
    /* Language & emit */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,

    /* Strictness */
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "useDefineForClassFields": true,

    /* Interop */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Environment */
    "lib": ["DOM", "ES2022"],
    "types": ["@webgpu/types"],

    /* Tooling */
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@assets/*": ["src/assets/*"],
      "@backend/*": ["src/backend/*"],
      "@domain/*": ["src/domain/*"],
      "@gpu/*": ["src/gpu/*"],
      "@runtime/*": ["src/runtime/*"]
    }
  },
  "include": ["src"]
}
